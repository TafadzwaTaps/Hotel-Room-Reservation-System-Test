@model IEnumerable<Hotel_Room_Reservation_System_Test.Models.Reservation>

@{
    ViewData["Title"] = "TaskBoard";
}

    <style>
        /* Reset default margin and padding */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Apply styles to the table */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: black;
        }

            .table th, .table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
                font-size: 20px; /* Changed font size to 20px */
                color: white; /* Changed text color to white */
            }

            .table th {
                color: white;
                font-size: 18px; /* Changed heading size to 18px */
            }

        h1 {
            color: white; /* Changed the title color to white */
            background-color: gray; /* Added a background color for the title */
            border-radius: 5px; /* Added border-radius to the title */
            padding: 10px; /* Added padding for better spacing */
            margin-bottom: 20px; /* Added margin for spacing below the title */
        }
    </style>

<h1>TaskBoard</h1>
<table class="table">
    <thead>
        <tr>
            <th>Reservation ID</th>
            <th>User</th>
            <th>CheckInDate</th>
            <th>CheckOutDate</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Id</td>
                <td>@reservation.UserId</td>
                <td>@reservation.CheckInDate</td>
                <td>@reservation.CheckOutDate</td>
                <td>@reservation.Status</td>
            </tr>
        }
    </tbody>
</table>

