            max-width: 800px;
            margin: 0 auto;
        }

            .book .form input,
            .book .form button {
                padding: 15px;
                margin-bottom: 15px;
                border: none;
                border-radius: 5px;
                font-size: 16px;
                width: 100%;
            }

            .book .form button {
                background-color: #ffc107;
                color: #333;
                cursor: pointer;
            }

    footerContent {
        background: #282834;
        color: #b6b7b9;
        padding: 10% 0 5% 0;
    }

        footerContent .grid {
            grid-template-columns: 6fr 3fr 3fr;
        }

        footerContent p {
            color: #b6b7b9;
            font-size: 15px;
            line-height: 25px;
        }

        footerContent .icon i {
            margin: 20px 20px 20px 0;
            color: #b6b7b9;
        }

        footerContent h2 {
            color: #fff;
            margin-bottom: 10px;
        }

        footerContent li {
            margin-bottom: 20px;
        }

        footerContent i {
            color: #7fc142;
            margin: 20px 0;
            margin-right: 20px;
        }

        footerContent label {
            margin: 20px 0;
        }
</style>

