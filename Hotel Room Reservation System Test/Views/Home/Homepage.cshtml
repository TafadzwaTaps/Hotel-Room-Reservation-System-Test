}

<style>

    /* Add custom styles for user profile */
    .user-profile {
        position: absolute;
        top: 10px;
        right: 5px;
    }

        .user-profile img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 5px;
        }

        .user-profile .user-details {
            display: flex;
            align-items: center;
            color: #333;
            cursor: pointer;
        }

            .user-profile .user-details .username {
                margin-right: 10px;
            }

        .user-profile .dropdown-menu {
            display: none;
            position: absolute;
            top: 60px;
            right: 0;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 999;
        }

            .user-profile .dropdown-menu a {
                display: block;
                padding: 10px;
                color: #333;
                text-decoration: none;
                transition: background-color 0.3s ease;
            }

                .user-profile .dropdown-menu a:hover {
                    background-color: #f1f1f1;
                }

    .home {
        background-color: #f8f9fa;
        padding: 80px 0;
        text-align: center;
    }

        .home .item {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
        }

            .home .item img {
                width: 200px;
                height: auto;
                margin-bottom: 20px;
            }

            .home .item .text h1 {
                font-size: 36px;
                color: #333;
                margin-bottom: 20px;
            }

            .home .item .text p {
                font-size: 18px;
                color: #666;
                line-height: 1.6;
            }

            .home .item .flex {
                margin-top: 30px;
            }

    .grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-gap: 20px;
    }

    input {
        outline: none;
        border: none;
        width: 100%;
    }

    .book {
        padding: 40px 0;
        background: #282834;
        color: #fff;
    }

    h1 {
        font-family: serif;
    }

    .book h1 {
        font-size: 28px;
    }

        .book h1 span {
            color: #7fc142;
        }

    .book input {
        padding: 20px;
        width: calc(85% - 10px); /* Adjust the width as needed */
        margin-right: 10px; /* Add some margin between inputs */
    }

        .book input:nth-last-child(1) {
            background: #7fc142;
            color: #fff;
            width: auto; /* Keep the last input to fill the remaining space */
        }



    footerContent {
        background: #282834;
        color: #b6b7b9;
        padding: 10% 0 5% 0;
    }

        footerContent .grid {
            grid-template-columns: 6fr 3fr 3fr;
        }

        footerContent p {
            color: #fff;
            font-size: 20px;
            line-height: 25px;
        }

        footerContent .icon i {
            margin: 20px 20px 20px 0;
            color: #b6b7b9;
        }

        footerContent h2 {
            color: #fff;
            margin-bottom: 10px;
        }

        footerContent li {
            margin-bottom: 20px;
        }

        footerContent i {
            color: #7fc142;
            margin: 20px 0;
            margin-right: 20px;
        }

        footerContent label {
            margin: 20px 0;
        }

    /* Rooms */
    .gallery {
        padding: 60px 0;
        background-color: #f8f9fa;
    }

    .room-item {
        border: 1px solid #dee2e6;
        border-radius: 5px;
        overflow: hidden;
        margin-bottom: 30px;
    }

        .room-item img {
            width: 100%;
            height: auto;
            border-bottom: 1px solid #dee2e6;
        }

        .room-item .details {
            padding: 20px;
        }

        .room-item h3 {
            font-size: 20px;
            margin-bottom: 10px;
            color: #333;
        }

        .room-item p {
            font-size: 16px;
            color: #666;
            margin-bottom: 15px;
        }

        .room-item .price {
            font-size: 18px;
            color: #7fc142;
        }

            .room-item .price span {
                color: #666;
                font-size: 14px;
                margin-left: 5px;
            }

    .box {
        color: #fff; /* White */
    }

        .box h2 {
            font-size: 24px; /* Increase font size as needed */
        }

        .box ul {
            list-style-type: none;
            padding: 0;
        }

            .box ul li {
                font-size: 18px; /* Increase font size as needed */
            }

                .box ul li a {
                    color:white;
                }


        .box p {
            font-size: 18px; /* Increase font size as needed */
            margin-bottom: 10px;
        }

        .box i {
            margin-right: 5px;
        }

    .user-info {
        font-size: 14px; /* Adjust the font size as needed */
