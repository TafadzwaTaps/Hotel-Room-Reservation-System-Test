@{
    ViewData["Title"] = "Contact Us";
}

<h2>Contact Us</h2>

<style>
    .contact-form {
        margin-bottom: 40px;
    }

        .contact-form form {
            max-width: 500px;
            margin: 0 auto;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

        .form-control:focus {
            outline: none;
            border-color: #7fc142;
        }

    .btn {
        padding: 10px 20px;
        background-color: #7fc142;
        border: none;
        color: #fff;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

        .btn:hover {
            background-color: #6cb536;
        }

    .contact-info {
        max-width: 500px;
        margin: 0 auto;
    }

        .contact-info h3 {
            margin-bottom: 20px;
            color: white;
        }

        .contact-info p {
            font-size: 18px;
            font-style: bold;           
            margin-bottom: 10px;
            color: white;
        }

        .contact-info i {
            margin-right: 10px;
        }

        h2 {
            padding: 10px;
            text-align: center;
            color: white;
        }
</style>

<div class="contact-form">
    <form>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Your Name" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Your Email" required>
        </div>
        <div class="form-group">
            <label for="message">Message:</label>
            <textarea id="message" name="message" class="form-control" rows="5" placeholder="Your Message" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
</div>

<div class="contact-info">
    <h3>Contact Information</h3>
    <p><i class="fa fa-map-marker"></i> 65 Krakowska, Street, Rzeszow, Poland.</p>
    <p><i class="fa fa-phone"></i> +48 123 456 789</p>
    <p><i class="fa fa-envelope"></i> HrrsTest@gmail.com</p>
</div>
