@model Hotel_Room_Reservation_System_Test.Models.CancellationPolicy

<style>
    /* Custom CSS styles for labels */
    .form-group label.control-label {
        color: #fff; /* Label text color (white) */
        font-weight: bold; /* Bolden the label text */
        font-size: 16px; /* Increase label font size */
    }

    /* Hover effect for form fields */
    .form-control:hover {
        background-color: #f8f9fa; /* Background color on hover */
    }

    h1 {
        color: white; /* Changed the title color to white */
        background-color: gray; /* Added a background color for the title */
        border-radius: 5px; /* Added border-radius to the title */
    }

    h4 {
        color: white; /* Changed the title color to white */
        background-color: #007bff; /* Added a background color for the title */
        border-radius: 5px; /* Added border-radius to the title */
    }
</style>


<h1>Edit Cancellation Policy</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label asp-for="PolicyName">Policy Name</label>
        <input asp-for="PolicyName" class="form-control" />
        <span asp-validation-for="PolicyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PolicyDescription">Policy Name</label>
        <input asp-for="PolicyDescription" class="form-control" />
        <span asp-validation-for="PolicyDescription" class="text-danger"></span>
    </div>
    <!-- Add other fields as needed -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
