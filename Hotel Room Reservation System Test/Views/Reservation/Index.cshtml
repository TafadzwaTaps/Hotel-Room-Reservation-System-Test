@model List<Hotel_Room_Reservation_System_Test.Models.Reservation>

<h1>Reservations</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>RoomId</th>
            <th>UserId</th>
            <th>CheckInDate</th>
            <th>CheckOutDate</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Id</td>
                <td>@reservation.RoomId</td>
                <td>@reservation.UserId</td>
                <td>@reservation.CheckInDate</td>
                <td>@reservation.CheckOutDate</td>
                <td>@reservation.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@reservation.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@reservation.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@reservation.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
