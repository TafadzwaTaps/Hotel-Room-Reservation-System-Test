@model Hotel_Room_Reservation_System_Test.Models.Reservation

<style>
    /* Custom CSS styles for reservation details */
    h1 {
        color: white; /* Title color */
        font-size: 24px; /* Font size for the title */
    }

    .row {
        display: flex;
        flex-wrap: wrap;
    }

    .col-sm-2,
    .col-sm-10 {
        flex: 0 0 auto;
        color: white; /* Text color for dt and dd elements */
        font-size: 20px; /* Font size for dt and dd elements */
    }

    .col-sm-2 {
        width: 16.66667%; /* Width for dt elements */
        font-weight: bold; /* Bolden dt text */
    }

    .col-sm-10 {
        width: 83.33333%; /* Width for dd elements */
    }

    /* Optional: Add spacing between dt and dd */
    dt {
        margin-bottom: 5px;
    }

    dd {
        margin-bottom: 15px;
    }

    /* Style action buttons */
    .action-button {
        background-color: #007bff; /* Blue color for button */
        color: white; /* Text color */
        padding: 5px 10px; /* Padding */
        border: none; /* No border */
        border-radius: 4px; /* Rounded corners */
        text-decoration: none; /* Remove underline */
        margin-right: 10px; /* Margin between buttons */
    }

        .action-button:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }
</style>

<h1>Reservation Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">RoomId</dt>
        <dd class="col-sm-10">@Model.RoomId</dd>
        <dt class="col-sm-2">UserId</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
        <dt class="col-sm-2">CheckInDate</dt>
        <dd class="col-sm-10">@Model.CheckInDate</dd>
        <dt class="col-sm-2">CheckOutDate</dt>
        <dd class="col-sm-10">@Model.CheckOutDate</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <!-- Action buttons -->
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="action-button">Edit</a>
    <a href="@Url.Action("Delete", new { id = Model.Id })" class="action-button">Delete</a>
    <a href="@Url.Action("Create")" class="action-button">Create New</a>
</div>
