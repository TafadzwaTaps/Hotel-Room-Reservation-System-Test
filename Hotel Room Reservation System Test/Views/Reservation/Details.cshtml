@model Hotel_Room_Reservation_System_Test.Models.Reservation

<style>
    /* Custom CSS styles for labels */
    .form-group label.control-label {
        color: #fff; /* Label text color (white) */
        font-weight: bold; /* Bolden the label text */
        font-size: 16px; /* Increase label font size */
    }

    /* Hover effect for form fields */
    .form-control:hover {
        background-color: #f8f9fa; /* Background color on hover */
    }

    h1 {
        color: white; /* Changed the title color to white */
        background-color: gray; /* Added a background color for the title */
        border-radius: 5px; /* Added border-radius to the title */
    }

    h4 {
        color: white; /* Changed the title color to white */
        background-color: #007bff; /* Added a background color for the title */
        border-radius: 5px; /* Added border-radius to the title */
    }
</style>

<h1>Reservation Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">RoomId</dt>
        <dd class="col-sm-10">@Model.RoomId</dd>
        <dt class="col-sm-2">UserId</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
        <dt class="col-sm-2">CheckInDate</dt>
        <dd class="col-sm-10">@Model.CheckInDate</dd>
        <dt class="col-sm-2">CheckOutDate</dt>
        <dd class="col-sm-10">@Model.CheckOutDate</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>
