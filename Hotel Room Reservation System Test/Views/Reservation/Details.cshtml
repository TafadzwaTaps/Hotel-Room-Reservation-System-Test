@model Hotel_Room_Reservation_System_Test.Models.ReservationDetailsViewModel

<style>
    /* Custom CSS styles for reservation details */
    h1 {
        color: white; /* Title color */
        font-size: 24px; /* Font size for the title */
    }

    .row {
        display: flex;
        flex-wrap: wrap;
    }

    .col-sm-2,
    .col-sm-10 {
        flex: 0 0 auto;
        color: white; /* Text color for dt and dd elements */
        font-size: 20px; /* Font size for dt and dd elements */
    }

    .col-sm-2 {
        width: 16.66667%; /* Width for dt elements */
        font-weight: bold; /* Bolden dt text */
    }

    .col-sm-10 {
        width: 83.33333%; /* Width for dd elements */
    }

    /* Optional: Add spacing between dt and dd */
    dt {
        margin-bottom: 5px;
    }

    dd {
        margin-bottom: 15px;
    }

    /* Style action buttons */
    .action-button {
        background-color: #007bff; /* Blue color for button */
        color: white; /* Text color */
        padding: 5px 10px; /* Padding */
        border: none; /* No border */
        border-radius: 4px; /* Rounded corners */
        text-decoration: none; /* Remove underline */
        margin-right: 10px; /* Margin between buttons */
    }

        .action-button:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }
</style>

<h1>Reservation Details</h1>

<div>
    <<div>
        <h4>Room Name: @Model.Room.Name</h4>
        <h4>Description: @Model.Room.Description</h4>
        <h4>Room Capacity: @Model.Room.RoomCapacity</h4>
        <h4>Price: @Model.Room.Price</h4>
    </div>

    <div>
        <h4>Check-In Date: @Model.Reservation.CheckInDate</h4>
        <h4>Check-Out Date: @Model.Reservation.CheckOutDate</h4>
        <h4>Status: @Model.Reservation.Status</h4>
    </div>

    @if (Model.Room.RoomImages != null && Model.Room.RoomImages.Any())
    {
        <div class="image-gallery">
            @foreach (var image in Model.Room.RoomImages)
            {
                <div>
                    <img src="@Url.Content("~/images/" + image.ImageUrl)" alt="Room Image" />
                </div>
            }
        </div>
    }

    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
