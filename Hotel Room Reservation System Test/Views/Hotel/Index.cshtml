@model List<Hotel_Room_Reservation_System_Test.Models.Hotel>

        <style>
    /* Reset default margin and padding */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Apply styles to the table */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
        }

    /* Style the "Create New" button */
    .create-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-bottom: 20px;
    }

        .create-button:hover {
            background-color: #0056b3;
        }

<h1>Hotels</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>PhoneNumber</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Id</td>
                <td>@hotel.Name</td>
                <td>@hotel.Address</td>
                <td>@hotel.PhoneNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@hotel.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@hotel.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@hotel.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
