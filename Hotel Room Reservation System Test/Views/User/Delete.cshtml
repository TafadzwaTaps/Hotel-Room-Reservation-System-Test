@model Hotel_Room_Reservation_System_Test.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<h4>User</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                User ID
            </dt>
            <dd class="col-sm-10">
                @Model.UserId
            </dd>
            <dt class="col-sm-2">
                Name
            </dt>
