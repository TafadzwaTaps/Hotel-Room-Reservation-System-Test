@model Hotel_Room_Reservation_System_Test.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User ID
        </dt>
        <dd class="col-sm-10">
            @Model.UserId
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>
</div>

<div>
    <a href="@Url.Action("Edit", new { id = Model.UserId })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
</div>
